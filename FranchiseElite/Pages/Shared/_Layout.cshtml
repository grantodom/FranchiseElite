<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LA Elite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #2C1C43;">
            <div class="container">
                <a class="navbar-brand" style="color: #D0D0D0;" asp-area="" asp-page="/Index">Louisiana Elite Basketball</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" style="color: #D0D0D0;" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #D0D0D0;" asp-area="" asp-page="/AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #D0D0D0;" asp-area="" asp-page="/Roster">Roster</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #D0D0D0;" asp-area="" asp-page="/Gallery">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #D0D0D0;" asp-area="" asp-page="/Schedule">Schedule</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #D0D0D0;" asp-area="" asp-page="/Stats">Stats</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #D0D0D0;" asp-area="" asp-page="/ContactUs">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted" style="background-color: #2C1C43;">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Louisiana Elite Basketball 2019- <a asp-area="" asp-page="/Privacy">Privacy</a></p>
        </div>
        <!-- /.container -->
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
